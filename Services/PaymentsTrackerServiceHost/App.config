<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<system.serviceModel>
		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehaviour">
					<serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="false" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
		<services>
			<service name="PaymentsTrackerServices.UserService.UserService" behaviorConfiguration="mexBehaviour">
				<endpoint address="UserService" binding="basicHttpBinding" contract="PaymentsTrackerServices.UserService.IUserService"></endpoint>
				<host>
						<baseAddresses>
							<add baseAddress="http://localhost:8080/"/>
						</baseAddresses>
				</host>
			</service>
		</services>
	</system.serviceModel>			
</configuration>